{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/build/**/*"
  ]
}
