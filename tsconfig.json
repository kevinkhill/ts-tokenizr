{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2020"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules/**",
    "**/__tests__/**/*.ts"
  ]
}
