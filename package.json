{
  "name": "ts-tokenizr",
  "version": "1.0.0",
  "description": "String Tokenization Library for TypeScript",
  "homepage": "https://github.com/kevinkhill/ts-tokenizr",
  "license": "MIT",
  "keywords": [
    "string",
    "token",
    "scanner",
    "lexer",
    "tokenizer"
  ],
  "files": [
    "build"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "bugs": "https://github.com/kevinkhill/ts-tokenizr/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinkhill/ts-tokenizr.git"
  },
  "authors": [
    {
      "name": "Kevin Hill",
      "email": "kevinkhill@gmail.com",
      "url": "http://github.com/kevinkhill"
    },
    {
      "name": "Dr. Ralf S. Engelschall",
      "email": "rse@engelschall.com",
      "url": "http://engelschall.com"
    }
  ],
  "scripts": {
    "clean": "rimraf ./dist/cjs/* ./dist/esm/*",
    "build": "tsc -b -i tsconfig.json && tsc -b -i tsconfig.cjs.json",
    "demo": "node -r esm ./demo/sample.js",
    "demo:dev": "tsnd --respawn ./demo/sample.ts",
    "test": "jest",
    "tdd": "yarn test --runInBand --watch ",
    "lint": "eslint \"./src/**/*.ts\"",
    "docs": "typedoc --out ./docs ./src"
  },
  "lint-staged": {
    "./src/**/*.ts": "eslint --cache --fix"
  },
  "peerDependencies": {
    "assert": "*"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.9.2",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.3",
    "esm": "^3.2.25",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.6",
    "np": "^7.0.0",
    "prettier": "^2.1.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  }
}
