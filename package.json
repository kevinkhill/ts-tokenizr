{
  "name": "ts-tokenizr",
  "version": "0.0.0-development",
  "description": "String Tokenization Library for TypeScript",
  "private": false,
  "keywords": [
    "string",
    "token",
    "scanner",
    "lexer",
    "tokenizer"
  ],
  "source": "src/index.ts",
  "main": "dist/ts-tokenizr.js",
  "module": "dist/ts-tokenizr.module.js",
  "unpkg": "dist/ts-tokenizr.umd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinkhill/ts-tokenizr.git"
  },
  "authors": [
    {
      "name": "Kevin Hill",
      "email": "kevinkhill@gmail.com",
      "url": "http://github.com/kevinkhill"
    },
    {
      "name": "Dr. Ralf S. Engelschall",
      "email": "rse@engelschall.com",
      "url": "http://engelschall.com"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/kevinkhill/ts-tokenizr",
  "bugs": "https://github.com/kevinkhill/ts-tokenizr/issues",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "demo": "tsnd ./demo/sample.ts",
    "demo:dev": "tsnd --respawn ./demo/sample.ts",
    "test": "jest",
    "tdd": "yarn test --runInBand --watch ",
    "lint": "eslint \"./src/**/*.ts\"",
    "docs": "typedoc --out ./docs ./src",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "assert": "*"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.9.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.3",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "microbundle": "^0.12.3",
    "np": "^6.5.0",
    "prettier": "^2.1.1",
    "semantic-release": "^17.1.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typedoc": "^0.16.11",
    "typescript": "^4.0.2"
  },
  "lint-staged": {
    "./src/**/*.ts": "eslint --cache --fix"
  }
}
